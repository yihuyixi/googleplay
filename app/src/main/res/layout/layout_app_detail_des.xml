<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_app_des_container"
    android:background="@drawable/list_item_bg_normal"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简介"
        android:textColor="@color/txt_title"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/tv_des"
        android:layout_height="wrap_content"
        android:text="煎饼果子来一套，饼果子来一套，饼果子来一套，饼果子来一套，饼果子来一套，饼果子来一套，饼果子来一套，饼果子来一套，"
        android:textColor="@color/txt_small"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者:"
            android:id="@+id/tv_author"
            android:textColor="@color/txt_title"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_des_arrow"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_down" />
    </RelativeLayout>

</LinearLayout>